/* styles.css */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.header {
    background-color: #333;
    color: #fff;
    padding: 10px 0;
}

.navbar {
    display: flex;
    justify-content: center;
    align-items: center;
}

.navbar a {
    color: #fff;
    text-decoration: none;
    padding: 10px 20px;
    font-size: 1em;
    transition: background-color 0.3s;
}

.navbar a:hover {
    background-color: #575757;
}

